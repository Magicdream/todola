= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'} do |f|
  %h2.form-heading Sign in
  = bootstrap_flash

  .control-group
    = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'input-block-level'
  .control-group
    = f.password_field :password, autofocus: true, placeholder: 'Password', class: 'input-block-level'

  - if devise_mapping.rememberable?
    %label.checkbox
      = f.check_box :remember_me
      Remember me
        
  %button.btn.btn-large.btn-primary{type: "submit"} Sign in
  %span.another-action
    or
    = link_to 'Register', new_user_registration_path