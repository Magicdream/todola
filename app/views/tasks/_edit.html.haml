.modal.hide.fade.edit-task
  .modal-header
    %h3 Edit Task

  .modal-body
    = form_for @task, remote: true, html: { class: 'form-horizontal' } do |f|
      .control-group
        = f.label :name, 'Task name', class: 'control-label'
        .controls
          = f.text_field :name, placeholder: 'Task name', maxlength: 255

      .control-group
        = f.hidden_field :priority
        = f.label :priority, class: 'control-label'
        .controls
          = render 'priority_select', task: @task

      .control-group
        = f.label :due_date_fmt, 'Due date', class: 'control-label'
        .controls
          = f.text_field :due_date_fmt, placeholder: 'mm/dd/yyyy', class: 'due-date'

  .modal-footer
    %button.btn(data-dismiss="modal" aria-hidden="true") Close
    %button.btn.btn-primary.submit(data-dismiss="modal") Save changes
